{
  "name": "rent-application",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd apps/backend && npm run start:dev",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "build": "npm run build --workspaces",
    "build:frontend": "cd apps/frontend && npm run build",
    "build:backend": "cd apps/backend && npm run build",
    "type-check": "npm run type-check --workspaces",
    "type-check:frontend": "cd apps/frontend && npx tsc --noEmit",
    "type-check:backend": "cd apps/backend && npx tsc --noEmit",
    "test": "npm run test --workspaces",
    "prisma:studio": "cd apps/backend && npx prisma studio",
    "prisma:migrate": "cd apps/backend && npx prisma migrate dev",
    "prisma:generate": "cd apps/backend && npx prisma generate",
    "db:reset": "bash scripts/reset-db.sh",
    "db:reset:force": "cd apps/backend && npx ts-node ../../scripts/reset-test-account.ts",
    "db:reset:with-seed": "cd apps/backend && npx ts-node ../../scripts/reset-test-account.ts && npx ts-node prisma/seed.ts",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "pre-commit": "npm run type-check",
    "pre-push": "npm run build:frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
